<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/park_detail_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="matrix"
        android:src="@drawable/spot1" />

    <TextView
        android:id="@+id/park_detail_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/park_detail_address"
        android:layout_alignParentStart="true"
        android:background="@color/AccentColor"
        android:gravity="center"
        android:singleLine="false"
        android:text="New Text"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/park_detail_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/park_detail_img"
        android:text="New Text" />

    <TextView
        android:id="@+id/park_detail_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/park_detail_address"
        android:text="New Text" />

    <TextView
        android:id="@+id/park_detail_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/park_detail_phone"
        android:text="New Text" />

</RelativeLayout>